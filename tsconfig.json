{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "node",

    // "lib": ["es2018"],
    // "module": "commonjs",
    // "target": "es5",

    "sourceMap": true,
    //"rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "preserveSymlinks": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,

    "strict": true,
    //"noImplicitAny": true,
    "noImplicitReturns": true,
    //"noImplicitThis": true,
    "noEmitOnError": false,

    "baseUrl": "src",
    "outDir": "./dist"
  },
  "exclude": ["dist", "node_modules"]
//  "include": [
//    "src/**/*"
//  ]
}
