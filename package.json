{
  "name": "formkit",
  "version": "0.4.6",
  "description": "Smart framework agnostic form helper.",
  "repository": "git@github.com:bozonx/formkit.git",
  "license": "MIT",
  "engines": {
    "node": ">=5.0.0"
  },
  "author": "Ivan Kozyrin <ipkozyrin@gmail.com>",
  "main": "dist/formkit.js",
  "scripts": {
    "test": "mocha",
    "build": "yarn test && yarn run build-node && yarn run build-web && yarn run build-web-min",
    "build-node": "NODE_ENV=production node_modules/.bin/webpack --progress --config ./webpack.node.config.js",
    "build-web": "NODE_ENV=production node_modules/.bin/webpack --progress --config ./webpack.web.config.js",
    "build-web-min": "NODE_ENV=production node_modules/.bin/webpack -p --progress --config ./webpack.web-min.config.js",
    "cov": "./node_modules/.bin/istanbul cover --report none ./node_modules/.bin/_mocha -- --require coffee-coverage/register-istanbul test",
    "cov-html": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --require coffee-coverage/register-istanbul test && sensible-browser ./coverage/lcov-report/index.html",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --require coffee-coverage/register-istanbul test",
    "doc-html": "esdoc -c esdoc.json && sensible-browser ./esdoc/index.html",
    "doc": "esdoc -c esdoc.json",
    "lint": "node_modules/.bin/eslint ./src",
    "fix": "node_modules/.bin/eslint --fix ./src"
  },
  "dependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-source-map-support-for-6": "^0.0.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coffee-coverage": "^2.0.1",
    "coffee-script": "^1.12.6",
    "eslint": "^3.19.0",
    "eslint-config-effency": "^0.1.1",
    "eslint-config-google": "^0.7.1",
    "eventemitter3": "^2.0.3",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.1",
    "mocha-sinon": "^2.0.0",
    "mock-require": "^2.0.2",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "source-map-support": "^0.4.15",
    "webpack": "^2.6.0",
    "webpack-merge": "^4.1.0"
  }
}
